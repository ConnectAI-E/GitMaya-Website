{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
        "paths": {
            "@/*": ["./*"]
          }
	},
	"include": [
		"next-env.d.ts",
		"next.config.js",
		"postcss.config.js",
		"tailwind.config.js",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
